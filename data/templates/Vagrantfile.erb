Vagrant.configure(2) do |config|
  <%cluster.each do |c|%>
    <%="config.vm.define '#{c[:name]}' do |node|"%>
      node.vm.box = "centos7"
      node.vm.box_url = "https://f0fff3908f081cb6461b407be80daf97f07ac418.googledrive.com/host/0BwtuV7VyVTSkUG1PM3pCeDJ4dVE/centos7.box"
      <%="node.vm.network 'forwarded_port', guest: 2376, host: #{c[:forwarded_port]}"%>

      <% if c[:swarm_port] %>
      <%="node.vm.network 'forwarded_port', guest: 2375, host: #{c[:swarm_port]}"%>
      <%end%>

      <%="node.vm.network 'private_network', type: 'dhcp'"%>

      node.vm.provider "virtualbox" do |v|
        <%="v.name = '#{c[:name]}'"%>
      end

      <% if tls %>
      <% %w(ca.pem server.pem server-key.pem).each do |file|%>
      <%="node.vm.provision 'file', source: '#{store}/#{file}', destination:'/tmp/docker_init/#{file}'"%>
      <%end%>
      node.vm.provision :shell, privileged: true, :inline => "mkdir -p /etc/pki/tls/docker/"
      node.vm.provision :shell, privileged: true, :inline => "cp /tmp/docker_init/*.pem /etc/pki/tls/docker/"
      <%end%>
      <%="node.vm.provision 'shell', path: '#{store}/provision.sh'"%>
    <%="end"%>

  <%end%>

end
